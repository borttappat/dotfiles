/* Dark theme. */
@import "~/.cache/wal/colors-rofi-dark"



configuration{
    modi: "run,drun,window";
    lines: 6;
    font: "cozette 8";
    terminal: "alacritty";
    location: 0;
    disable-history: false;
    hide-scrollbar: true;
}

window {
    height: 240px;
    border: 5px;
    width: 360px;
}

inputbar {
    children: [prompt,entry];
    border-radius: 5px;
    padding: 2px;
}

prompt {
    enabled: false;
    padding: 5px;
    border-radius: 3px;
    margin: 5px 0px 0px 5px;
}

textbox-prompt-colon {
    expand: false;
    str: ":";
}

entry {
    padding: 5px;
    margin: 5px 0px 0px 5px;
}

listview {
    border: 0px 0px 0px;
    padding: 5px 0px 0px;
    margin: 5px 0px 0px 5px;
    columns: 1;
}

element {
    padding: 1px;
}


mode-switcher {
    spacing: 0;
  }

button {
    padding: 10px;
    vertical-align: 0.5; 
    horizontal-align: 0.5;
}    
